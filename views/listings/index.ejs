         <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 mt-2" >
          <%   for(data of alldata){%>
        <a href="/listings/<%=data._id %> " class="listing-links">
            <div class="card listing-card">
                 <img src="<%= data.image.url %>" class="card-img-top" alt="Listings" style="height: 20rem;">
                 <div class="card-img-overlay">
                 </div>
                 <div class="card-body">
                    <p class="card-text"><b><%= data.title %></b><br>
                     &#8377; <%=data.price.toLocaleString("en-IN") %>/night
                     <i class="GST">&nbsp;&nbsp;+18% GST</i>
                    </p>
                   
                 </div>
            </div>
        </a>
        <% } %>
    </div>
    
   <script>

    let checkbox = document.getElementById("flexSwitchCheckReverse");
    checkbox.addEventListener("click",()=>{

            let GST = document.querySelectorAll(".GST");  // he 1 are return karte  karn ki varti loop aslyamu selectqury selector all karav lagl
           for(info of GST)
           {
                     if(info.style.display != "inline")
                     {
                             info.style.display = "inline";
                     }
                    else
                    {

                             info.style.display = "none";
                    }
            }
    });
   </script>
